## Application/service name shown in version metadata.
APP_NAME=caseflow-decision-lab

## Runtime environment (allowed: local, dev, stg, prod).
APP_ENV=local

## Shared API key for protected routes (required outside local).
API_KEY=dev-preview-key

## Semantic app version surfaced by /version.
APP_VERSION=0.1.0

## Source control revision for this build/deploy.
GIT_SHA=unknown

## Build timestamp for traceability.
BUILD_TIME=unknown

## Model registry root directory path.
MODEL_REGISTRY_DIR=models/registry

## Active model ID to load at startup.
ACTIVE_MODEL_ID=baseline_v1

## Optional rate limiting (disabled by default).
RATE_LIMIT_ENABLED=false
RATE_LIMIT_RPS=5
RATE_LIMIT_BURST=10
RATE_LIMIT_SCOPE=ip

## Decision audit sink configuration.
AUDIT_SINK=log
AUDIT_JSONL_PATH=artifacts/events/decision_events.jsonl
